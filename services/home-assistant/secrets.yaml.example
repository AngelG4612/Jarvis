# === Core / URLs ===
internal_url: "http://homeassistant.local:8123"
external_url: "https://ha.your-domain.com"

# === MMM-HomeAssistant ===
HA_BASE_URL="http://localhost:8123"
HA_TOKEN="your_long_lived_token_here"

# === Location (optional) ===
ha_latitude: "41.8781"
ha_longitude: "-87.6298"
ha_elevation: 181

# === HTTP reverse proxy (optional) ===
http_proxy_1: "172.18.0.0/16"
http_proxy_2: "127.0.0.1"

# === MQTT ===
mqtt_broker: "127.0.0.1"
mqtt_port: 1883
mqtt_user: "jarvis_mqtt"
mqtt_password: "CHANGE_ME_STRONG"

# === Databases / telemetry (optional) ===
recorder_db_url: "mysql://homeassistant:CHANGE_ME@db/homeassistant?charset=utf8mb4"
influxdb_url: "http://influxdb:8086"
influxdb_token: "INFLUX_TOKEN_...CHANGE_ME"
influxdb_org: "your_org"
influxdb_bucket: "homeassistant"

# === Spotify (for Spotcast or legacy spotify: config) ===
spotify_client_id: "SPOTIFY_CLIENT_ID"
spotify_client_secret: "SPOTIFY_CLIENT_SECRET"
sp_dc: "SPOTIFY_SP_DC_COOKIE"
sp_key: "SPOTIFY_SP_KEY_COOKIE"

# === Wyze Bridge / RTSP examples (optional) ===
porch_rtsp: "rtsp://user:pass@wyzebridge:8554/porch"
garage_rtsp: "rtsp://user:pass@wyzebridge:8554/garage"

# === HA long-lived token (for external scripts) ===
ha_long_lived_token: "eyJ0eXAiOiJKV1QiL...CHANGE_ME"
